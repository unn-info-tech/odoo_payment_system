<odoo>
    <record id="view_teacher_tree" model="ir.ui.view">
        <field name="name">teacher.tree</field>
        <field name="model">edu.teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="about"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">teacher.form</field>
        <field name="model">edu.teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="about"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
